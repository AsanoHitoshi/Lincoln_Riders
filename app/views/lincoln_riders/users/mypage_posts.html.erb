<div class="background clearfix">
	<%= render 'layouts/sidebar',new_post: @new_post %>
	<div class="bar">
		<%= link_to lincoln_riders_user_mypage_posts_path do%>
			<div class="bar_link">
				<i class="fas fa-motorcycle bar_icon"></i>
			</div>
		<%end%>
		<%= link_to lincoln_riders_user_mypage_fav_posts_path(@user) do%>
			<dvi class="bar_link">
				<i class="fas fa-heart bar_icon"></i>
			</dvi>
		<%end%>
	</div>
	<div class="content clearfix">
		<%if flash[:notice]%>
			<div class="flash">
				<%= flash[:notice] %>
			</div>
		<%end%>

		<div class="posts_index">
			<h3 class="page_title">Mypage Posts</h3>
			<%= render 'lincoln_riders/posts/posts_index',posts: @posts %>
		</div>


	</div>

</div>