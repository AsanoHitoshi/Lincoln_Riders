<div class="background clearfix">

	<%= render 'layouts/sidebar',new_post: @new_post %>
	<div class="content clearfix">
		<div class="post">
			<h3>Edit Post</h3>
			<%= form_with(model: @post,url: lincoln_riders_post_path(@post)) do |f|%>
				<%=f.label :内容%><br>
				<%= f.text_area :text %><br>

				<%= f.label :image %><br>
				<%= f.attachment_field :image %><br>
				<%= f.submit "Update Post" ,class:"btn btn-default"%>
			<%end%>
		</div>
	</div>
</div>