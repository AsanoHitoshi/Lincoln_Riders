<%if mapped_images.length != 0 %>
	<% i = 0 %>
	<% mapped_images.each do |mapped_image| %>
		<div class='mapped_image_field clearfix mapped_image_field_<%=i%>'>
			<%= render 'lincoln_riders/mapped_images/mapped_image_position',mapped_image: mapped_image ,i:i%>
			<%= attachment_image_tag mapped_image, :image ,class: "mapped_image_index mapped_image_index_#{i}" %>
			<div class="mapped_image_info">
				<%= attachment_image_tag mapped_image.user, :profile_image ,class: "user_profile_icon"%>

				<%= link_to lincoln_riders_user_path(mapped_image.user_id) do%>
					<%=mapped_image.user.name%><br>
				<%end%>
				<%= link_to lincoln_riders_mapped_image_path(mapped_image.id) do %>
					<%= mapped_image.text %>
				<% end %>
			</div>
		</div>
		<% i += 1 %>
	<% end %>
<%else%>
	<h3>投稿がありません</h3>
<%end%>