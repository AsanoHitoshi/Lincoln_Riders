<div class="background clearfix">

  <%= render 'layouts/sidebar',new_post: @new_post %>
  <div class="bar">
    <%= link_to lincoln_riders_mapped_images_path do%>
      <div class="bar_link">
        <i class="fas fa-motorcycle bar_icon"></i>
      </div>
    <%end%>
    <%= link_to lincoln_riders_mapped_images_search_path do%>
      <dvi class="bar_link">
        <i class="fas fa-search bar_icon"></i>
      </dvi>
    <%end%>
  </div>
  <div class="content clearfix">
    <%if flash[:notice]%>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <%end%>
    <h3 class="page_title">MappedImages Search</h3>

    <div class="map">
		<form onsubmit="return false;">
			<input type="text" id="address" value="大阪">
			<button type="button" value="検索" id="map_button">検索</button>
		</form>
      <!-- 地図を表示させる要素 -->
      <div class="map_box01" style="width: 100%;height: 600px;"><div id="map-canvas" style="width: 100%;height: 100%;"></div></div>

    </div>
    <div id="mapped_image_index">
    	<%= render 'lincoln_riders/mapped_images/mapped_image_index',mapped_images: @mapped_images %>
    </div>
    <div>
		<%= hidden_field_tag "mapped_image_position","", {id: "mapped_image_position_lat"} %>
		<%= hidden_field_tag "mapped_image_position","", {id: "mapped_image_position_lng"} %>
    </div>
  </div>
</div>

<script>

  SetMap.ForSearch();

</script>