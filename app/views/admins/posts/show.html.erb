<div class="background clearfix">
	<div class="admin_content clearfix">
		<h3>投稿Post詳細</h3>
		<table class="table table-striped">
			<tr>
				<td>ID</td>
				<td><%=@post.id%></td>
			</tr>
			<tr>
				<td>内容</td>
				<td><%=@post.text%></td>
			</tr>
			<tr>
				<td>画像</td>
				<td><%= attachment_image_tag @post, :image ,class: "admin_show_image"%></td>
			</tr>
			<tr>
				<td>ユーザー名</td>
				<td><%=@post.user.name%></td>
			</tr>
			<tr>
				<td>投稿日時</td>
				<td><%=@post.created_at.strftime('%Y/%m/%d %H:%M:%S')%></td>
			</tr>
		</table>
		<%=link_to "削除", admins_post_path(@post.id), method: :delete ,data: { confirm: "本当に削除しますか？" }%>
	</div>
</div>